<% include ./partials/header%>
<title>Login</title>
<style>
  div#message{
    display: none;
  }
</style>
</head>
<body>
<%include ./navbar %>

<h1 class="jumbotron text-center">Login</h1>

<div class="container center-block">
  <div class="container alert alert-danger center-block text-center" style="display:<%= display %>">
    <h4><strong><%= error %></strong></h4>
  </div>
  <form method="POST" action="/login">


    <div class="center-block">
      <!--Field for username -->
      <div class="col-md-3"></div>

      <div class="col-md-6">
        <h4 class="lead text-center bg-info" style="width: 25%;">Enter Details</h4>
        <div class="form-group">

          <label for="email">Email</label>
          <input type="text" name="email" class="form-control" id="email" placeholder="Email" required>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control" id="password" placeholder="Password" required>
        </div>
        <input type="submit" class="btn btn-success" value="Submit">
        <div id="message" class="alert alert-danger text-center"></div>
      </div>
    </div>

    <div class="col-md-3"></div>
  </form>
</div>

<script>
  document.getElementById("login").className = "active";
</script>

<% include ./partials/footer%>