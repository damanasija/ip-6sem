                        <th class="text-center" rowspan="2">Unit</th>
                        <th class="text-center" rowspan="2">Rate per item (&#x20b9;)</th>
                        <th class="text-center" rowspan="2">Discount</th>
                        <th class="text-center" rowspan="2">Taxable Value</th>
                        <th class="text-center" colspan="2">IGST</th>
                        <th class="text-center" rowspan="2" colspan="4">Net Amount</th>
                        <th class="text-center" rowspan="2">Action</th>                                                                           
                        </center>
                    </tr>
                    <tr class="bg-info">
                        <th>Rate</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody id="igstTableBody"></tbody>
            </table>
            <div class="row">
                <div class="col-md-8"></div>
                <div class="col-md-4 bg-success">
                    <table class="space">
                        <tr class="totals">
                            <td><strong>Total Taxable Amount (&#x20b9;) :</strong></td>
                            <td><input type="text" id="igstTotalTaxable" class="btn btn-default" disabled></td>
                        </tr>
                        <tr class="totals">
                            <td><strong>Total Tax (&#x20b9;) :</strong></td>
                            <td><input type="text" id="igstTotalTax" class="btn btn-default" disabled></td>
                        </tr>
                        <tr class="totals">
                            <td><strong>Invoice Total (&#x20b9;) :</strong></td>
                            <td><input type="text" id="igstInvoiceTotal" class="btn btn-default" disabled></td>                            
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-1">
            <button class="btn btn-primary" onclick="addIgstItem()">Add Item</button>
            <button disabled="disabled" id="igstSubmit" class="btn btn-success" style="margin-top: 1.5em;" onclick="generateIgstBill()">Submit</button>
        </div>    
    </div>
</div>
</div>
