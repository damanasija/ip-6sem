<% include ./partials/header.ejs %>
<% include ./navbar.ejs %>
<div class="container-fluid" id="billHeader">
    <hr>
    <div class="row">
        <div class="col-md-6">
            <h3 id="userCompanyName"><strong><%= user.company_name %></strong></h3>
            <h4 class="border"><strong>GSTIN:- </strong id="userGSTIN"><%= user.gstin %></h4>
            <h5 id="userAddress"><%= user.address %></h5>
            <h5><%= user.city%>, <%= user.pin_code %></h5>
            <h5 id="userState"><%= user.state %></h5>
            <h5><%= user.country %></h5>
            
        </div>
        <div class="col-md-6">
            <br>
            <div class="row">
                <strong class="col-md-2">Firm Name: </strong>
                <div class="form-group col-md-7">
                   <input type="text" class="form-control input-sm" id="firmName" placeholder="Firm Name">
                </div>
            </div>
            <div class="row">
                <strong class="col-md-2">GSTIN</strong>
                <div class="form-group col-md-7">
                    <input type="text" class="form-control input-sm" id="firmGSTIN" placeholder="GSTIN">
                </div>
            </div>
            <div class="row">
                <strong class="col-md-2">Address:</strong>
                <div class="form-group col-md-7">
                    <input type="text" class="form-control input-sm" id="firmAddress" placeholder="Address">
                </div>
            </div>
            <div class="row">
                <strong class="col-md-2">City:</strong>
                <div class="form-group col-md-3">
                    <input type="text" class="form-control input-sm" id="firmCity" placeholder="City">
                </div>
                <strong class="col-md-2">Pin Code:</strong>
                <div class="form-group col-md-2">
                    <input type="text" class="form-control input-sm" id="firmPin" placeholder="Pin Code">
                </div>
            </div>
            <div class="row">
                <strong class="col-md-2">State/UT:</strong>
                <div class="col-md-3">
                    <select name="state" id="firmState" class="btn btn-sm form-control input-sm" onchange="billSelector()">
                        <% states.forEach( (state) => { %>
                        <option value="<%= state.name%>"><strong><%= state.name %></strong></option>
                        <% }) %>
                    </select>
                </div>
                <strong class="col-md-2">Country:</strong>
                <div class="col-md-2">
                    <input type="text" class="form-control input-sm" id="firmCountry" placeholder="Country">                    
                </div>
            </div>
        </div>
    </div>
    <hr>
</div>


<div id="sgstTable">
<div class="container-fluid">
    <div class="row">
        <div class="col-md-11">
            <table class="table table-hover table-bordered" rules="all">
                <thead>
                    <tr class="bg-info">
                        <center>
                        <th class="text-center" rowspan="2">Sr</th>
                        <th class="text-center" rowspan="2">Description Of Goods</th>
                        <th class="text-center" rowspan="2">HSN</th>
                        <th class="text-center" rowspan="2">QTY</th>
                        <th class="text-center" rowspan="2">Unit</th>
                        <th class="text-center" rowspan="2">Rate per item (&#x20b9;)</th>
                        <th class="text-center" rowspan="2">Discount(%)</th>
                        <th class="text-center" rowspan="2">Taxable Value</th>
                        <th class="text-center" colspan="2">CGST</th>
                        <th class="text-center" colspan="2">SGST</th>
                        <th class="text-center" rowspan="2" >Net Amount</th>
                        <th class="text-center" rowspan="2">Action</th>                                                   
                        </center>
                    </tr>
                    <tr class="bg-info">
                        <th>Rate</th>
                        <th>Amount</th>
                        <th>Rate</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody id="sgstTableBody"></tbody>
            </table>
        </div>
        <div class="col-md-1">
            <button class="btn btn-primary" onclick="addSgstItem()">Add Item</button>
            <button class="btn btn-success" style="margin-top: 1.5em;" disabled>Submit</button>          
        </div>    
    </div>
</div>
</div>

<div id="igstTable">
<div class="container-fluid">
    <div class="row">
        <div class="col-md-11">
            <table class="table table-hover table-bordered" rules="all">
                <thead>
                    <tr class="bg-info">
                        <center>
                        <th class="text-center" rowspan="2">Sr</th>
                        <th class="text-center" rowspan="2">Description Of Goods</th>
                        <th class="text-center" rowspan="2">HSN</th>
                        <th class="text-center" rowspan="2">QTY</th>
                        <th class="text-center" rowspan="2">Unit</th>
                        <th class="text-center" rowspan="2">Rate per item (&#x20b9;)</th>
                        <th class="text-center" rowspan="2">Discount</th>
                        <th class="text-center" rowspan="2">Taxable Value</th>
                        <th class="text-center" colspan="2">IGST</th>
                        <th class="text-center" rowspan="2" colspan="4">Net Amount</th>
                        <th class="text-center" rowspan="2">Action</th>                                                                           
                        </center>
                    </tr>
                    <tr class="bg-info">
                        <th>Rate</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody id="igstTableBody"></tbody>
            </table>
        </div>
        <div class="col-md-1">
                <button class="btn btn-primary" onclick="addIgstItem()">Add Item</button>
                <button disabled="disabled" class="btn btn-success" style="margin-top: 1.5em;">Submit</button>
        </div>    
    </div>
</div>
</div>


